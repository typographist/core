{
  "name": "@typographist/core",
  "version": "2.0.0-alpha.1",
  "description": "Core API for typographist",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:eslint && flow && npm run test:code",
    "test:watch": "jest --coverage --watch --updateSnapshot",
    "test:code": "jest --coverage",
    "test:eslint": "eslint .",
    "prettier": "prettier './**/**/**.{babelrc,prettierrc,json,js,eslintrc,spec}' --write"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    },
    "lint-staged": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{babelrc,prettierrc,json,js,eslintrc,spec}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "files": [],
  "publishConfig": {
    "access": "public"
  },
  "repository": "git+https://github.com/typographist/core.git",
  "keywords": [
    "css",
    "design",
    "golden-ratio",
    "eyeglass-module",
    "modular",
    "modular-scale",
    "modularscale",
    "modularscale-postcss",
    "musical-scales",
    "postcss",
    "postcss-plugin",
    "ratio",
    "scale",
    "typo",
    "typography",
    "typographist",
    "vertical-rhythm",
    "web-typography"
  ],
  "contributors": [
    "Maxim Alyoshin <mgreen097@gmail.com>"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
