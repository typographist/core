{
  "name": "@typographist/core",
  "version": "16.0.0",
  "description": "Core API for typographist",
  "main": "dist/lib/index.cjs.js",
  "module": "dist/es/index.es.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:es",
    "build:es": "cross-env NODE_ENV=es rollup -c",
    "build:cjs": "cross-env NODE_ENV=cjs rollup -c",
    "clean": "cross-env rimraf dist",
    "commit": "cross-env npx git-cz",
    "coverage": "cross-env cat ./coverage/lcov.info | coveralls",
    "prettier": "cross-env prettier './**/**/**.{json,js,eslintrc}' --write",
    "semantic-release": "cross-env npx semantic-release",
    "test": "cross-env npx flow && npm run test:code",
    "test:watch": "cross-env jest --coverage --watch --updateSnapshot",
    "test:code": "cross-env jest --coverage",
    "lint": "cross-env eslint ."
  },
  "license": "MIT",
  "homepage": "https://github.com/typographist/core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/typographist/core.git"
  },
  "bugs": {
    "url": "https://github.com/typographist/core/issues"
  },
  "author": "maxinakenty <mgreen097@gmail.com>",
  "keywords": [
    "css-in-js",
    "design",
    "golden-ratio",
    "modular",
    "modular-scale",
    "musical-scales",
    "ratio",
    "scale",
    "typography",
    "typographist",
    "web-typography"
  ],
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "igogo": "1.6.0",
    "ramda": "0.26.1"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/github": "5.2.10",
    "@semantic-release/npm": "5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.1.0",
    "babel-plugin-module-resolver": "3.2.0",
    "commitizen": "3.0.7",
    "coveralls": "3.0.3",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-import-resolver-babel-module": "5.0.1",
    "eslint-plugin-flowtype": "3.4.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.3.0",
    "eslint-plugin-prettier": "3.0.1",
    "flow-bin": "0.94.0",
    "flow-typed": "2.5.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.0",
    "memoize-one": "5.0.0",
    "nyc": "13.3.0",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "rollup": "1.4.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-flow-entry": "0.3.1",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-uglify": "6.0.2",
    "semantic-release": "15.13.3"
  }
}
